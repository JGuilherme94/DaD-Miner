{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "windows 64: DaD-Miner",
			"command": ".\\execuable\\build.bat",
			"args": [
				"-Wall -Wextra -g",
				".\\build_depedencies\\sourcecode\\app\\*.cpp",
				"DaD-Miner.exe",
				".\\build_depedencies\\thirdparty\\include",
				".\\build_depedencies\\thirdparty\\lib",
				".\\build_depedencies\\thirdparty\\bin",
				".\\execuable\\windows_64"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: windows 64"
		},
